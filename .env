# Logging Configuration
LOG_LEVEL=debug       # Available levels: trace, debug, info, warn, error, fatal
LOG_NO_COLOR=false    # Set to true to disable colored output

# Legacy debug flag (will be set to debug level if set to 1)
DEBUG=1

# RPC Debugging
RPC_DEBUG=1           # Set to 1 to enable detailed RPC logging

# Application Configuration
DRY=0                # Dry run mode

# Bitcoin RPC Configuration
# Option 1: Standard Bitcoin RPC with authentication
#RPC_USER=myuser
#RPC_PASS=mypassword
#RPC_HOST=http://localhost:8332

# Option 2: GetBlock or similar service with token in URL
# Note: GetBlock supports standard Bitcoin JSON-RPC methods like:
# - getbestblockhash
# - getblockchaininfo
# - getblockheader
# - getblock
# - getrawtransaction
# But NOT custom methods like "getbestblock"
BTC_GETBLOCK=https://go.getblock.io/c1f97c1a62804e6f928037000d2b4e57

# Other required settings
RPC_LIMIT=10
API_HOST=localhost:8000
BLOCKS_PARSING_DEPTH=10

